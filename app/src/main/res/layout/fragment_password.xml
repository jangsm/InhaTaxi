<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/loading_frame_container"
    tools:context=".activities.sign_up.PasswordFragment"
    android:background="@color/colorPrimary"
    android:orientation="vertical">

    <TextView
        android:id="@+id/fragment_password_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="65dp"
        android:textSize="32sp"
        android:textColor="@color/colorWhite"
        android:text="비밀번호 \n입력해주세요"
        />


    <EditText
        android:id="@+id/fragment_password_et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="100dp"
        android:hint="영문, 숫자를 포함한 6~10자리"
        android:textColorHint="@color/colorGray"
        android:textColor="@color/colorWhite"
        android:inputType="textPassword"
        android:textSize="14sp"
        android:theme="@style/EditTheme" />
    <EditText
        android:id="@+id/fragment_password_et_password_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="100dp"
        android:hint="비밀번호 확인"
        android:textColorHint="@color/colorGray"
        android:textColor="@color/colorWhite"
        android:inputType="textPassword"
        android:textSize="14sp"
        android:theme="@style/EditTheme" />

    <TextView
        android:id="@+id/basic_info_tv_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginBottom="24dp"
        android:textSize="12sp"
        android:textColor="@color/colorLemon"
        android:textStyle="bold"
        android:visibility="invisible"
        android:text=""
        />

    <ImageView
        android:id="@+id/basic_info_done"
        android:layout_marginStart="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/btn_done" />

</LinearLayout>