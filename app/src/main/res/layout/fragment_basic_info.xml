<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/loading_frame_container"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context=".activities.sign_up.BasicInfoFragment">

    <TextView
        android:id="@+id/basic_info_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="65dp"
        android:textSize="32sp"
        android:textColor="@color/colorWhite"
        />


    <EditText
        android:id="@+id/basic_info_et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="100dp"
        android:hint="아이디를 입력해주세요."
        android:textColorHint="@color/colorGray"
        android:textColor="@color/colorWhite"
        android:inputType="textEmailAddress"
        android:textSize="14sp"
        android:theme="@style/EditTheme" />

    <TextView
        android:id="@+id/basic_info_tv_error"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginBottom="65dp"
        android:textSize="12sp"
        android:textColor="@color/colorLemon"
        android:textStyle="bold"
        android:visibility="invisible"
        android:text="아이디를 입력해주세요."
        />

    <ImageView
        android:id="@+id/basic_info_done"
        android:layout_marginStart="24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/btn_done" />

</LinearLayout>